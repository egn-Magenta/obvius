<& /shared/editengine2/init, editscheme=>$keywords &>
%
%
%
<%once>
my $storage = {
               organization => {
                                class => 'DbTable',
                                source => 'keywords',
                                identifiers => [qw(id)],
                               },
               functions => {
                             update => {label=>'Update', relation=>'edit'},
                             create => {label=>'Create new', anonymous=>'1', relation=>'new'},
                            },
               data => {
                        id => { type=>'integer', mandatory=>1, },
                        name => { type=>'line', },
                       },
              };

my $keyword = {
               type => 'scheme/editsheet',
               label => 'Edit keyword',
               display => [
                           {name=>'name', content=>'data', label=>'Name' },
                          ],
               storage => $storage,
              };


my $keywords={
              label=>'Keywords',
              type=>'scheme/table',
              arguments => {
                            max => '20',
                           },
              display=>[
                     { name=>'name', content=>'data', label=>'Name', },
                    ],
              storage=>$storage,
              relations=>{
                          edit=>{
                                 scheme=>$keyword,
                                 projection=>'pipe',
                                },
                          new=>{
                                 scheme=>$keyword,
                                 projection=>'pipe',
                                },
                         },
             };
</%once>     
%
<%init>
