     <form class="obvius-handling" action="./" method="get">
       <p>
         <& util/identifier &>
% foreach my $button (@buttons) {
         <& util/button, name=>$button->{name}, text=>$button->{title}, inactive=>$inactive{$button->{name}}, accesskey=>$button->{accesskey} &>
% }
       </p>
     </form>
