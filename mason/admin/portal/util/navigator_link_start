<a onclick="<& navigator_link_start:onclick &>" href="<& navigator_link_start:href, %ARGS &>">\

<%method href>
<%args>
$path => '/'
$purpose => 'browser'
$fieldname => undef
</%args> 
<% $url %>
<%init>
use Digest::MD5 qw(md5_hex);

$obvius->read_user_and_group_info();

my $user = $obvius->{USER};
my $passwd = $obvius->{USERS}{$user}{passwd};
my $time = time();

my $phrase = md5_hex($passwd . $time);
my $url = "/navigator/default?user=$user&code=$phrase&time=$time";
$url .= "&fieldname=$fieldname" if (defined($fieldname));
$url .= "&path=$path" if ($path);
</%init>
</%method>
<%method onclick>
"javascript: return obvius_open_window('<& navigator_link_start:href &>');"
</%method>


