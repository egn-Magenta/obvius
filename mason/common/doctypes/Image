my @fields=(
	    { name=>'mimetype', title=>'MIME-type', },
	    { name=>'width',    title=>'Bredde',    unit=>'pixels'},
	    { name=>'height',   title=>'Højde',     unit=>'pixels'},
	    { name=>'size',     title=>'Størrelse', unit=>'b' },
	    { name=>'align',    title=>'Placering', },
