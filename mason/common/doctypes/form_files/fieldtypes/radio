%for(@$options) {
<input type="radio" name="<% $fielddata->{name} %>" value="<% $_->{optionvalue} %>"<% $_->{optionvalue} eq $value ? ' checked="checked"': '' %> />
<% $_->{optiontitle} %>
%}
%
%
<%args>
$fielddata=>{}
</%args>
<%init>
$fielddata ||= {};
my $options = $fielddata->{options}->{option} || [];
my $value = $fielddata->{_submitted_value} || $fielddata->{defaultvalue} || '';
</%init>
