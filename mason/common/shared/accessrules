%# $Id$
<%args>
$universal	  => ''
$inherited	  => ''
$value		  => ''
$groups		  => []
$users		  => []
$allow_inherited  =>  1
$show_universal   =>  1
$inactive         =>  0
</%args>
<%init>
$universal =~ s/\r//gs;
$inherited =~ s/\r//gs;
$inherited =~ s/\r//gs;
my ( $js_universal, $js_inherited) = map {
	s/\n/\\n/g;
	s/(['"])/\\$1/g;
	$_;	
} ( $universal, $inherited);
</%init>

<div id="editlayer" class="obvius-ac-editlayer" >

