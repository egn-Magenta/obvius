<%args>
$startdate
$starttime => undef
$enddate => undef
$endtime => undef
</%args>
<& /shared/display_date, date=>$startdate &> 
% if ($starttime) {
  <% $starttime %>
%}
% if (($endtime && ($starttime || $enddate)) || $enddate) {
    <& /shared/msg, text => 'to' &>
% if ($enddate) {
    <& /shared/display_date, date => $enddate &>
%}
% if ($endtime) {
<% $endtime %>
%}
%}
<%init>
if ($startdate ge $enddate) {
   $enddate = undef;
}
</%init>
