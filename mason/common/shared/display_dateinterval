<%args>
$startdate
$starttime => undef
$enddate => undef
$endtime => undef
</%args>
<& /shared/display_date, date=>$startdate &> 
% if ($starttime) {
  <& print_time, time => $starttime &>
%}
% if (($endtime && ($starttime || $enddate)) || $enddate) {
     <& /shared/msg, text => 'to' &>
% if ($enddate) {
    <& /shared/display_date, date => $enddate &>
%}
% if ($endtime) {
<& print_time, time => $endtime &>
%}
%}
<%init>
if ($startdate ge $enddate) {
   $enddate = undef;
}
</%init>

<%def print_time>
<%args>
$time
</%args>
  <& /shared/msg, text => "kl." &>
  <% $time %>
</%def>
  
