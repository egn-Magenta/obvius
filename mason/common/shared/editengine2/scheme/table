      <td>
%       foreach my $function (@obj_functions) {
         <& '../select:function', function=>$function, editscheme=>$editscheme, history=>$history &>
         <& '../transfer:function', label=>$editscheme->{storage}->{functions}->{$function}->{label}, history=>$history &>
