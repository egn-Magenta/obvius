<%init>
$labels={} if (!defined $labels);

my %values=();
if (defined $value) {
    $value=[$value] unless (ref($value) eq 'ARRAY');
    %values=map { $_=>1 } @$value;
    # XXX Perhaps complain if more than one value is there if type is
