<%args>
$cookie
$value=>undef
$expires=>undef
$path=>'/'
</%args>
%
<%perl>
print STDERR "I SET COOKIE \n";
my $c=Apache::Cookie->new($r,
		          -name => $cookie,
                          -value => $value,
                          -expires => $expires,
			  -path => $path,
                         );
$c->bake;
</%perl>