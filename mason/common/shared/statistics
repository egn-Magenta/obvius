<%method month>
%# A method to show the visits of the specified month, for the specified document.
<% $count %>
<%args>
$doc_id
# If no value is given, the current system value will be used.
$month => 0
</%args>
<%init>
$month = (localtime(time))[4] if ($month == 0);
my $count = $obvius->get_month_statistics_for_doc($doc_id, $month);
</%init>
</%method>
<%method year_summed>
%# A method to show an accumulation of the past years statistics, for the specified document.
<% $count %>
<%args>
$doc_id
</%args>
<%init>
my $count = $obvius->get_year_statistics_for_doc($doc_id);
</%init>
</%method>
