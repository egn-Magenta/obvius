<%method month%>
%# A method to show the visits of the specified month, for the specified document.
<% $count %>
<%args>
$doc_id
# If no value is given, the current system value will be used.
$month = 0
$year = 0
</%args>
<%init>
$month = (localtime(time))[4] if ($month == 0);
$year = (localtime(time))[5] if ($year == 0);
my $count = $obvius->get_statistics_for_doc($doc_id, $month, $year, current=>1);
</%init>
</%method>
<%method year%>
%# A method to show the visits of the specified year, for the specified document.
<% $count %>
<%args>
$doc
# If no value is given, the current system value will be used.
$month = 0
$year = 0
</%args>
<%init>
$month = (localtime(time))[4] if ($month == 0);
$year = (localtime(time))[5] if ($year == 0);
my $count = $obvius->get_statistics_for_doc($doc_id, $month, $year, current=>0);
</%init>
</%method>
