%if (not defined($show_subdocs) or $show_subdocs == 1) {
% if (@subdocs) {
    <ul>
%     foreach (@subdocs) {
%my $date = $m->scomp('/shared/display_date', date=>$_->{docdate}, format=>'verbatim');
      <li><a href="./<% $_->{name} %>/"><% $_->{short_title} %></a><br><% $_->{teaser} %><% $date !~ 'none' ? $date .'<br>' : '' %></li>
%     }
    </ul>
% }
