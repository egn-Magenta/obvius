<div class="content">
<% $content %>
    </div>
% if ($show_subdocs) {
<& subdocs, output=>$output &>\
% }
<%init>
my $output=$r->pnotes('OBVIUS_OUTPUT');

my $doctypename='Standard';
if ( (ref $doctype) =~ /::([^:]+)$/ ) {
    $doctypename = $1;
}

$obvius->get_version_fields($vdoc, [qw(title show_subdocs)]);
my $title = $vdoc->Title;

my $content=undef;
$content=$m->scomp("/doctypes/$doctypename", output=>$output) if ($m->comp_exists("/doctypes/$doctypename"));

unless (defined $content) {
    $m->comp('/shared/set_status_message',
             status=>'WARNING',
             message=>[ 'Component not found for document type', ' "', $doctypename, '"' ]);
    $content=''
}

my $show_subdocs=$vdoc->field('show_subdocs') || 0;
</%init>