<div class="content">
<% $content %>
    </div>
% unless ($hide_subdocs) {
<& subdocs, output=>$output &>\
% }
<%init>
my $output=$r->pnotes('OBVIUS_OUTPUT');

my $doctypename='Standard';
if ( (ref $doctype) =~ /::([^:]+)$/ ) {
    $doctypename = $1;
}

$obvius->get_version_fields($vdoc, [qw(title)]);
my $title = $vdoc->Title;

my $content=$m->scomp("/doctypes/$doctypename", output=>$output);

my $hide_subdocs=$r->notes('hide_subdocs') || 0;
</%init>