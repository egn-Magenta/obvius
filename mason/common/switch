<div class="content">
<% $content %>
    </div>
% if ($show_subdocs) {
<& subdocs, output=>$output &>\
% }
<%init>
my $output=$r->pnotes('OBVIUS_OUTPUT');

my $doctypename='Standard';
if ( (ref $doctype) =~ /::([^:]+)$/ ) {
    $doctypename = $1;
}

$obvius->get_version_fields($vdoc, [qw(title show_subdocs)]);
my $title = $vdoc->Title;

my $content=$m->scomp("/doctypes/$doctypename", output=>$output);

my $show_subdocs=$vdoc->Show_subdocs || 0;
</%init>