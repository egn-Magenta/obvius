<%method edit>
<select name="<% $name %>">
%for(@options) {
    <option value="<% $_ %>"><% $_ %></option>
%}
</select>
<%args>
$fieldspec
$fieldtype
$name
$session
</%args>
<%init>
my @options;

my $interp = $m->interp;
my $comp_root = $interp->comp_root || [];
my $docs_dir;

for(@$comp_root) {
    if($_->[0] eq 'docroot') {
        $docs_dir = $_->[1];
        last;
    }
}

$docs_dir||='';

$docs_dir =~ s#docs$#mason/common/doctypes/db_display_comps#;

if(-d $docs_dir) {
    opendir(DH, $docs_dir);
    for(readdir(DH)) {
        if(-f "$docs_dir/$_") {
            push(@options, $_);
        }
    }
    closedir(DH);
}

</%init>
</%method>
%
%
%
<%method cook>
<%args>
$value=>undef
</%args>
<%perl>
    return $value;
</%perl>
</%method>
