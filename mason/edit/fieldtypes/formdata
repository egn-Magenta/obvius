<input type="hidden" name="<% $name %>" value="<% $value |h %>" />
%
<%init>
my $value=$session->{fields_out}->param(uc($name));
   $value=$session->{fields_in}->param(uc($name)) unless defined($value);
$wrap=' WRAP="' . $wrap . '" ';
</%init>
</%method>
%
<%method cook>
<%args>
$value=>undef
</%args>
<%perl>
$value =~ s/\r//g if defined ($value);
return $value;
</%perl>
</%method>
