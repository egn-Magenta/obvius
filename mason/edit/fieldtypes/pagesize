<%method edit>
<%args>
$fieldspec
$fieldtype
$name
$session
$size=>19
</%args>

<select name="<% $name %>" tabindex="10">
%   for (@values) {
        <option value="<% $_ %>" <% $value eq $_ ? "SELECTED" : "" %>><% $_ eq "0" ? "Ingen begrænsning" : "$_ underdokumenter"%></option>
% }
</select>
<%init>
my $value=$session->{fields_out}->param(uc($name));
   $value=$session->{fields_in}->param(uc($name)) unless defined($value);

my @values = qw[0 3 5 8 10 15 20 30 50 75 100 200];
</%init>

</%method>
%
<%method cook>
<%args>
    $value=>undef
</%args>
<%perl>
    return $value;
</%perl>
</%method>