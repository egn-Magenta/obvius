<%init>
my $image_doctype = $obvius->get_doctype_by_name('Image');
my @sizes;
for(keys %{$image_doctype->{FIELDS}}) {
    if(/^DATA_(\d+)x(\d+)$/i) {
        push(@sizes, "$1x$2");
    }
}
</%init>
