%} else {
<TR><TD class="sublevel"><& SELF:msg, text=>'This version' &></td><TD class="sublevel">: <% $vdoc->Version %></TD></TR>
%}
<TR><TD class="sublevel"><& SELF:msg, text=>'Latest version' &></td><TD class="sublevel">: <% $latest->Version %></TD></TR>
