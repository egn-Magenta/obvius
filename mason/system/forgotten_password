	font-size: 1.4em;
	margin-left: 30px;
}

#mainarea {
    	width: 770px;
    	position: absolute;
    	left: 50%;
	margin-left: -385px;
	background: transparent url(/grafik/images/login_top.gif) no-repeat scroll 0 0;
	border: 1px solid #75736E;
	padding-top: 107px;
}

label {
    	float: left;
    	width: 9em;
}

#content {
	margin-left: 215px;
	width: 350px;
}

form {
	text-align: center;
}

</style>
