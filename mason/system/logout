<%init>
my $return_uri = $r->param('return') || "/admin/";
my $cookie=new Apache::Cookie($r,
                                -name => "obvius_login_session",
                                -value => "",
                                -expires => undef, # Undef means expire the cookie now
                                -path => '/',
                            );
$cookie->bake($r);
$r->no_cache(1);
</%init>
