% if ($i!=$total) {
          <tr>
            <td width="<% $left_cell_width %>" colspan="4"><& SELF:link, link=>"javascript:OpenWin('$prefix$uri?obvius_op=versions&obvius_current=" . $vdoc->Version . "', 250)", text=>$m->scomp('SELF:msg', text=>'The entire list ...'), ghosted=>$ghosted &></td>
